<h1><%= t("home.login")%></h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "#{t('home.login')}" %> ou <%= link_to "#{t('home.register')}", new_user_path %></div>
<% end %>
